{# topic.twig #}
{% extends "./layout/layout.twig" %}

{% block component %}
				<ul class="c-topic">
					<li class="c-topic-header">
						<h2 class="c-topic-header-title">Announcments</h2>
						<ul class="c-topic-header-actions">
							<li class="c-topic-header-action">
								<a class="c-topic-header-action-link" href="" data-toggle="tooltip" data-placement="top" title="SubForums">
									<svg class="o-icon c-topic-header-action-link-icon"><use xlink:href="#more-v"></use></svg>
								</a>
							</li>
						</ul>
					</li>
				{% for topic in topics %}
				{% if topic.type === "announce" %}
					{% include './includes/topic-item.twig' %}
				{% endif %}
				{% endfor %}
				</ul>
				<ul class="c-topic">
					<li class="c-topic-header">
						<h2 class="c-topic-header-title">Forum</h2>
						<ul class="c-topic-header-actions">
							<li class="c-topic-header-action">
								<a class="c-topic-header-action-link" href="" data-toggle="tooltip" data-placement="top" title="SubForums">
									<svg class="o-icon c-topic-header-action-link-icon"><use xlink:href="#more-v"></use></svg>
								</a>
							</li>
						</ul>
					</li>
					{% for topic in topics %}
					{% if topic.type === "sticky" %}
						{% include './includes/topic-item.twig' %}
					{% endif %}
					{% endfor %}
					{% for topic in topics %}
					{% if topic.type === "topic" %}
						{% include './includes/topic-item.twig' %}
					{% endif %}
					{% endfor %}
				</ul>
{% endblock %}
